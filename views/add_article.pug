extends layout
block content    
    h1 #{title}
    .row
        .col-6.m-auto

            form(action="/articles/add" method="post")
                #form-group
                    label Title:
                    input.form-control(name='title' type='text')

                #form-group
                    label Author:
                    input.form-control(name='author' type='text')
                #form-group
                    label Body:
                    textarea.form-control(name='body')
                input.btn.btn-primary.mt-3(type='submit' value='Submit')
